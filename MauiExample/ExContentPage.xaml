<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiExample.ExContentPage"
             Title="ExContentPage">
    <VerticalStackLayout>
        <Label 
            Text="ExContentPage"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="10,50,10,0"
            FontSize="30"
         />
        
        <Button
            Text="Continuar ExFlyoutPage"
            Clicked="ExFlyoutPage" 
            BackgroundColor="#76b5c5" 
            CornerRadius="4" 
            FontSize="Medium" 
            Margin="0,100,0,0"
            HorizontalOptions="Center"
            VerticalOptions="Center"
        />
        <!-- Clicked="" 
        Funcion utilizada para usar accion de boton el parametro colocado dentro 
        de los parentecis se refiere al nombre usado para llamar el comando insertado
        en el archivo "Inici.Xaml.cs"
        -->

        <!-- Horizontal / VerticalOptions="" 
        Funcion utilizada para centralizar com el maximo de margenes un objeto"
        -->

    </VerticalStackLayout>
</ContentPage>