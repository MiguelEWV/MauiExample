<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiExample.ExFlyoutPage"
             Title="ExFlyoutPage">
    
    
    <!--
    Este es el menu desplazante. 
    
    https://learn.microsoft.com/pt-br/dotnet/maui/user-interface/pages/flyoutpage?view=net-maui-9.0
    -->
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu" Padding="10"
                    >
            <ScrollView>
                <StackLayout>
                    <Label Text="Menu" 
                       FontSize="Title" 
                       HorizontalOptions="Center" 
                       />

                    <!---->
                <Label Text="ExStackLayout" 
                       FontSize="15" 
                       HorizontalOptions="Center"
                       Margin="0,20,0,0"
                       />
                <Button
                        Text="Entrar" 
                        HorizontalOptions="Center"
                        Background="FloralWhite"
                        TextColor="Black"
                        FontSize="Body" 
                        Clicked="ExStackLayout"
                        />
                <!---->
                <Label Text="ExTabbedPage" 
                       FontSize="15" 
                       HorizontalOptions="Center"
                       Margin="0,20,0,0"
                       />
                <Button
                        Text="Entrar" 
                        HorizontalOptions="Center"
                        Background="FloralWhite"
                        TextColor="Black"
                        FontSize="Body"
                        Clicked="ExTabbedPage"
                        />
                <!---->
                <Label Text="ExGrid" 
                        FontSize="15" 
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        />
                <Button
                        Text="Entrar" 
                        HorizontalOptions="Center"
                        Background="FloralWhite"
                        TextColor="Black"
                        FontSize="Body"
                        Clicked="ExGrid"
                        />
                <!---->
                <Label Text="ExAbsoluteLayout" 
                        FontSize="15" 
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        />
                <Button
                        Text="Entrar" 
                        HorizontalOptions="Center"
                        Background="FloralWhite"
                        TextColor="Black"
                        FontSize="Body"
                        Clicked="ExAbsoluteLayout"
                        />
                <!---->
                <Label Text="ExFlexLayout" 
                        FontSize="15" 
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        />
                <Button
                        Text="Entrar" 
                        HorizontalOptions="Center"
                        Background="FloralWhite"
                        TextColor="Black"
                        FontSize="Body"
                        Clicked="ExFlexLayout"
                        />
                <!---->
                <Label Text="ExControlsPresentation" 
                        FontSize="15" 
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        />
                <Button
                        Text="Entrar" 
                        HorizontalOptions="Center"
                        Background="FloralWhite"
                        TextColor="Black"
                        FontSize="Body"
                        Clicked="ExControlsPresentation"
                        />
                <!---->
                <Label Text="ExComandControl" 
                        FontSize="15" 
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        />
                <Button
                        Text="Entrar" 
                        HorizontalOptions="Center"
                        Background="FloralWhite"
                        TextColor="Black"
                        FontSize="Body"
                        Clicked="ExComandControl"
                        />
                <!---->
                <Label Text="ExActivityIndicator" 
                       FontSize="15" 
                       HorizontalOptions="Center"
                       Margin="0,20,0,0"
                       />
                <Button
                       Text="Entrar" 
                       HorizontalOptions="Center"
                       Background="FloralWhite"
                       TextColor="Black"
                       FontSize="Body"
                       Clicked="ExActivityIndicator"
                       />
                <!---->
                <Label Text="ExCarouselView" 
                       FontSize="15" 
                       HorizontalOptions="Center"
                       Margin="0,20,0,0"
                       />
                <Button
                       Text="Entrar" 
                       HorizontalOptions="Center"
                       Background="FloralWhite"
                       TextColor="Black"
                       FontSize="Body"
                       Clicked="ExCarouselView"
                       />
                <!---->
                <Label Text="ExContentPage" 
                       FontSize="15" 
                       HorizontalOptions="Center"
                       Margin="0,20,0,0"
                       />
                <Button
                       Text="Entrar" 
                       HorizontalOptions="Center"
                       Background="FloralWhite"
                       TextColor="Black"
                       FontSize="Body"
                       Clicked="ExContentPage"
                       />
               

            </StackLayout>
            </ScrollView>
        </ContentPage>
    </FlyoutPage.Flyout>

    <!--Este es una paguina base de aterrisage que contiene el contenido inicial-->
    <!--Para crear espacios de linea en xaml se usa el codigo &#10; -->

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Primera Opcion">
                    <StackLayout>
                        <Label Text="Esta es la pagina base&#10;'Muestra el contenido basico inicial'&#10;No tiene relacion con el menu " 
                               FontSize="Large" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center" 
                               />
                        <Button Text="No clicar"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Padding="5"
                                FontAutoScalingEnabled="True"
                                FontSize="Large" 
                                Margin="10"
                                />
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
   

</FlyoutPage>