<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiExample.Inicio"
             Title="Inicio">
    
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center"
            HorizontalOptions="Center" 
            Margin="0,150,0,0" 
            FontSize="Title"
            />

        <Button
            Text="Entrar"
            Clicked="Entrar"
            AnchorX="10" 
            AnchorY="10" 
            BackgroundColor="#FF3D23" 
            CornerRadius="4" 
            FontSize="Medium" 
            Margin="0,100,0,0"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

        <Label 
            Text="Criado por MWTIS"
            VerticalOptions="Fill"
            Margin="0,80,0,0"
            HorizontalOptions="Center" 
            FontSize="Medium"
        />

        <!-- Clicked="" 
        Funcion utilizada para usar accion de boton
        el parametro colocado dentro doe los parentecis 
        se refiere al nombre usado para llamar el comando 
        insertado en el archivo "Inici.Xaml.cs"
        -->

        <!-- Como comentar -->
    </VerticalStackLayout>
    
    
</ContentPage>
    
