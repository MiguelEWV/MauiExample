                    />
            <Button
                        Text="Entrar"
                        
                        AnchorX="10" 
                        AnchorY="10" 
                        BackgroundColor="#FF3D23" 
                        CornerRadius="4" 
                        FontSize="Medium" 
                        Margin="10,100,10,0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                    />
            <!--Puedo Usar Clicked dentro del boton para llamar una funcion-->
        </VerticalStackLayout>
        
    </ContentPage>
