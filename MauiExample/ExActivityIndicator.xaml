<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiExample.ExActivityIndicator"
             Title="ExActivityIndicator">
    
    <VerticalStackLayout>
        
        <Label 
            Text="Controles que mostran atividade do aplicativo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        
        <!-- Activity indicator es usado para mostrar una animaciÃ³n de carga.-->
        <ActivityIndicator 
            IsRunning="True"
            Color="Red"
            />
        <!-- ProgressBar es usado para mostrar el progreso de una tarea.-->
        <ProgressBar 
            Progress="0.5"
            ProgressColor="Green"
            />
       
    </VerticalStackLayout>
    
    
</ContentPage>